{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./node_modules/*"]
    }
  },

  "include": ["./src", "./server", "__tests__"],
  "exclude": ["./node_modules", "./build"]
}
